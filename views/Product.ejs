<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Add Product</title>
  <!-- Tailwind CSS -->
  <link href="https://cdn.jsdelivr.net/npm/tailwindcss@2.2.19/dist/tailwind.min.css" rel="stylesheet">
  <style>
    body {
      background-color: #121212;
      /* Dark background color */
    }

    .bg-gray-800 {
      background-color: #1f2937;
      /* Darker background color */
    }

    .text-gray-100 {
      color: #f9fafb;
      /* Light text color */
    }

    .text-gray-300 {
      color: #d1d5db;
      /* Slightly lighter text color */
    }

    .bg-gray-900 {
      background-color: #111827;
      /* Dark background for input */
    }

    .border-gray-600 {
      border-color: #4b5563;
      /* Dark border color */
    }

    .hover\:bg-blue-700:hover {
      background-color: #2563eb;
      /* Darker blue on hover */
    }

    .focus\:shadow-outline:focus {
      box-shadow: 0 0 0 3px rgba(59, 130, 246, 0.5);
      /* Focus shadow */
    }
  </style>
</head>

<body class="h-screen flex items-start justify-center pt-12">
  <div class="bg-gray-800 p-8 rounded-lg shadow-md w-full max-w-lg">
    <h1 class="text-2xl font-bold mb-6 text-center text-gray-100">Add Product</h1>
    <form action="/product/addProduct" method="post">
      <div class="mb-4">
        <label for="image" class="block text-gray-300 font-bold mb-2">Product Image</label>
        <input type="text" name="image" id="image" placeholder="Enter image URL"
          class="shadow appearance-none border border-gray-600 rounded w-full py-2 px-3 text-gray-200 bg-gray-900 leading-tight focus:outline-none focus:shadow-outline" />
      </div>
      <div class="mb-4">
        <label for="productname" class="block text-gray-300 font-bold mb-2">Product Name</label>
        <input type="text" name="productname" id="productname" placeholder="Enter product name"
          class="shadow appearance-none border border-gray-600 rounded w-full py-2 px-3 text-gray-200 bg-gray-900 leading-tight focus:outline-none focus:shadow-outline" />
      </div>
      <div class="mb-4">
        <label for="productprice" class="block text-gray-300 font-bold mb-2">Product Price</label>
        <input type="number" name="productprice" id="productprice" placeholder="Enter product price"
          class="shadow appearance-none border border-gray-600 rounded w-full py-2 px-3 text-gray-200 bg-gray-900 leading-tight focus:outline-none focus:shadow-outline" />
      </div>
      <div class="mb-4">
        <label for="description" class="block text-gray-300 font-bold mb-2">Product Description</label>
        <input type="text" name="description" id="description" placeholder="Enter description"
          class="shadow appearance-none border border-gray-600 rounded w-full py-2 px-3 text-gray-200 bg-gray-900 leading-tight focus:outline-none focus:shadow-outline" />
      </div>
      <div class="mb-4" id="category">
        <label for="category" class="block text-gray-300 font-bold mb-2">Product Category</label>
        <select name="CategoryId" id="category"
          class="shadow appearance-none border border-gray-600 rounded w-full py-2 px-3 text-gray-200 bg-gray-900 leading-tight focus:outline-none focus:shadow-outline">
          <option value="" selected disabled>--Select Category--</option>
          <% cat.forEach(val=> { %>
            <option value="<%= val._id %>">
              <%= val.cat_name %>
            </option>
            <% }) %>
        </select>
      </div>
      <div class="mb-4">
        <label for="subcategory" class="block text-gray-300 font-bold mb-2">Product SubCategory</label>
        <select name="subCategoryId" id="subcategory"
          class="shadow appearance-none border border-gray-600 rounded w-full py-2 px-3 text-gray-200 bg-gray-900 leading-tight focus:outline-none focus:shadow-outline">
          <option value="" selected disabled>--Select SubCategory--</option>
          <% subcat.forEach(val=> { %>
            <option value="<%= val._id %>">
              <%= val.subcat_name %>
            </option>
            <% }) %>
        </select>
      </div>
      <div class="mb-4">
        <label for="extracategory" class="block text-gray-300 font-bold mb-2">Product ExtraCategory</label>
        <select name="extraCategoryId" id="extracategory"
          class="shadow appearance-none border border-gray-600 rounded w-full py-2 px-3 text-gray-200 bg-gray-900 leading-tight focus:outline-none focus:shadow-outline">
          <option value="" selected disabled>--Select ExtraCategory--</option>
          <% extracat.forEach(val=> { %>
            <option value="<%= val._id %>">
              <%= val.extracat_name %>
            </option>
            <% }) %>
        </select>
      </div>
      <div class="flex items-center justify-between">
        <input type="submit" value="Submit"
          class="bg-blue-600 hover:bg-blue-700 text-white font-bold py-2 px-4 rounded focus:outline-none focus:shadow-outline" />
      </div>
    </form>
  </div>
</body>

</html>